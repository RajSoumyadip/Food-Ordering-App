<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ls"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.soumyadipghosh.tmp.Signup">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">



        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPhoneSignUp"
            android:hint="Phone Number"
            android:textColorHint="#FFFFFF"
            app:met_underlineColor="#FFFFFF"
            android:textColor="#ffffff"
            android:textSize="34sp"
            android:inputType="phone"
            app:met_baseColor="#FFFFFF"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="#FFFFFF"
            app:met_singleLineEllipsis="true"
          />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtName"
            android:hint="Name"
            android:textColorHint="#FFFFFF"
            app:met_underlineColor="#FFFFFF"
            android:textColor="#ffffff"
            android:textSize="34sp"
            android:inputType="text"
            app:met_baseColor="#FFFFFF"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#FFFFFF"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPassWordSignUp"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            app:met_underlineColor="#FFFFFF"
            android:textColor="#ffffff"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="#FFFFFF"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#FFFFFF"
            app:met_singleLineEllipsis="true"
            />




        <info.hoang8f.widget.FButton
            android:id="@+id/btnSignUp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="45dp"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buttonColor="#000000"
            android:shadowColor="#FFFFFF"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="50dp"/>

    </LinearLayout>

</RelativeLayout>
